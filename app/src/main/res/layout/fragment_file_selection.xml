<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.view.fragment.FileSelectionFragment">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Recipient ID:"
        android:layout_marginTop="20dp"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:id="@+id/textview_fragment_file_selection_user_label"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="410395ef-9c4f-419a-aeef-64f05fa68c86"
        app:layout_constraintTop_toBottomOf="@+id/textview_fragment_file_selection_user_label"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:id="@+id/textview_fragment_file_selection_user_value"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_fragment_file_selection_user_value"
        android:text="Select files"
        android:layout_marginTop="30dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:id="@+id/button_fragment_file_selection_file_picker"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/button_fragment_file_selection_file_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Selected files:"
        android:layout_marginTop="30dp"
        style="@style/TextAppearance.Material3.TitleSmall"
        android:id="@+id/textview_fragment_file_selection_files_label"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textview_fragment_file_selection_files_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/textview_fragment_file_selection_files_list"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:text="Next"
        android:id="@+id/button_fragment_file_selection_next_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>