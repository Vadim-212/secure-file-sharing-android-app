<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:id="@+id/button_fragment_main_choose_file"
        android:text="Choose file"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_fragment_main_choose_file"
        android:layout_marginTop="25dp"
        android:id="@+id/button_fragment_main_file_encrypt"
        android:text="Encrypt file"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_fragment_main_file_encrypt"
        android:layout_marginTop="25dp"
        android:id="@+id/button_fragment_main_file_decrypt"
        android:text="Decrypt file"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_fragment_main_file_decrypt"
        android:layout_marginTop="25dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/edittext_fragment_main_encoded_key"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_fragment_main_encoded_key"
        android:layout_marginTop="25dp"
        android:id="@+id/button_fragment_main_test_api"
        android:text="Test api"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_fragment_main_unzip_files"
        app:layout_constraintTop_toBottomOf="@+id/button_fragment_main_test_api"
        android:layout_marginTop="25dp"
        android:id="@+id/button_fragment_main_zip_files"
        android:text="Zip files"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/button_fragment_main_zip_files"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_fragment_main_test_api"
        android:layout_marginTop="25dp"
        android:id="@+id/button_fragment_main_unzip_files"
        android:text="Unzip files"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_fragment_main_unzip_files"
        android:layout_marginTop="25dp"
        android:id="@+id/textview_fragment_main_files_uri_list"/>

</androidx.constraintlayout.widget.ConstraintLayout>