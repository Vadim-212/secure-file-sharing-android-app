<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.view.fragment.ReceivingFilesFragment">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Sender ID:"
        android:layout_marginTop="20dp"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:id="@+id/textview_fragment_receiving_files_sender_label"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="410395ef-9c4f-419a-aeef-64f05fa68c86"
        app:layout_constraintTop_toBottomOf="@+id/textview_fragment_receiving_files_sender_label"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:id="@+id/textview_fragment_receiving_files_sender_value"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressbar_fragment_receiving_files_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textview_fragment_receiving_files_status"
        android:layout_marginBottom="15dp"
        style="@style/Widget.Material3.CircularProgressIndicator.Small"
        android:indeterminate="true"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_fragment_receiving_files_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/TextAppearance.Material3.LabelLarge"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:enabled="false"
        android:text="Save files"
        android:id="@+id/button_fragment_receiving_files_save_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>